<% if current_user %>
<%- model_class = Camara -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<%= link_to t('.new', :default => "Nueva cámara"),new_camara_path, :class => 'btn btn-primary' %>
<table id="table" class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:ubicacion) %></th>
      <th><%= model_class.human_attribute_name(:url) %></th>
      <% if current_user.name == "Admin" %>
        <th><%=t '.actions', :default => "Acciones" %></th>  
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% current_user.camaras.each do |camara| %>
      <tr>
        <td><%= link_to camara.id, camara_path(camara) %></td>
        <td><%= camara.ubicacion %></td>
        <td><%= camara.url %></td>
        <% if current_user.name == "Admin" %>
          <td>
            <%= link_to t('.edit', :default => "Editar"), edit_camara_path(camara), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => "Eliminar"), camara_path(camara), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Seguro deseas eliminar esta cámara?')) }, :class => 'btn btn-mini btn-danger' %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>