<%= form_for :contact_form, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="control-group">
    <%= f.label :Nombre, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :titulo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :message_title, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :mensaje, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :message_body, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Enviar", :class => 'btn btn-primary' %>
  </div>
<% end %>